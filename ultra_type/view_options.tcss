
Screen {
    align: center top;
}

Select {
    margin: 0;
    align: left top;
}

Label {
    margin: 0;
    align: right middle;
}
Grid {
    grid-size: 2 2;
}
Button{
    margin: 1;
}
#options {
    grid-size: 2;
    grid-gutter: 1 2;
    grid-rows: 1fr 3;
    padding: 0 1;
    width: 60;
    height: 19;
    border: thick $background 80%;
    background: $surface;
}
